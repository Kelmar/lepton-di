{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "label": "Build Project",
            "problemMatcher": [ "$tsc" ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "clean",
            "label": "Clean Project",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "test",
            "label": "Run Tests",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}